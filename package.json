{
  "name": "padl",
  "version": "1.0.0-alpha.17",
  "description": "Develop pattern libraries with lit-element",
  "homepage": "https://github.com/britishgas-engineering/padl",
  "bug": {
    "url": "https://github.com/britishgas-engineering/padl/issues"
  },
  "keywords": [
    "polymer",
    "lit-element",
    "pattern",
    "library",
    "design"
  ],
  "scripts": {
    "test": "ava test/*.test.js",
    "test:e2e": "cd e2e && node run.js",
    "test:watch": "ava --watch",
    "test:coverage": "nyc ava",
    "build": "babel src -d dist",
    "prepare": "npm run build"
  },
  "bin": {
    "padl": "dist/index.js"
  },
  "author": "Jonathan Holt",
  "license": "MIT",
  "repository": "https://github.com/britishgas-engineering/padl",
  "dependencies": {
    "@babel/cli": "7.7.7",
    "@babel/core": "7.7.7",
    "@babel/plugin-transform-spread": "7.7.4",
    "@babel/preset-env": "7.7.7",
    "@babel/register": "7.7.7",
    "@webcomponents/webcomponentsjs": "2.4.0",
    "babelrc-rollup": "3.0.0",
    "chokidar": "3.3.1",
    "commander": "3.0.2",
    "core-js": "3.6.0",
    "find-node-modules": "2.0.0",
    "fs-extra": "8.1.0",
    "glob": "7.1.6",
    "less": "3.11.1",
    "less-plugin-autoprefix": "github:jholt1/less-plugin-autoprefix#master",
    "less-plugin-clean-css": "github:jholt1/less-plugin-clean-css#master",
    "resolve": "1.14.1",
    "rollup": "1.27.13",
    "rollup-plugin-babel": "4.3.3",
    "rollup-plugin-cleanup": "3.1.1",
    "rollup-plugin-delete": "1.1.0",
    "rollup-plugin-filesize": "6.2.1",
    "rollup-plugin-less": "1.1.2",
    "rollup-plugin-livereload": "1.0.4",
    "rollup-plugin-multi-entry": "2.1.0",
    "rollup-plugin-node-resolve": "5.2.0",
    "rollup-plugin-terser": "5.1.3",
    "rollup-plugin-visualizer": "3.3.1",
    "update-notifier": "4.0.0",
    "web-component-analyzer": "0.1.21"
  },
  "devDependencies": {
    "ava": "^2.4.0",
    "nyc": "^14.1.1",
    "sinon": "^7.5.0",
    "@storybook/html": "^5.3.19",
    "variable-diff": "^2.0.1"
  },
  "ava": {
    "require": [
      "@babel/register"
    ]
  },
  "nyc": {
    "exclude": [
      "dist",
      "test",
      "templates"
    ]
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": true
          }
        }
      ]
    ]
  }
}
