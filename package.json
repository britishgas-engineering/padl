  },
  "scripts": {
    "build": "./node_modules/.bin/babel bin --out-dir build",
    "prepublish": "npm run build",
    "test": "ava",
    "test:watch": "ava --watch",
    "test:coverage": "nyc ava"
  },
  "devDependencies": {
    "ava": "1.1.0",
    "nyc": "^13.1.0",
    "sinon": "^7.2.3"
  },
  "ava": {
    "require": [
      "babel-register",
      "babel-polyfill"
    ]
  },
  "nyc": {
    "exclude": [
      "build",
      "test"
    ]
  },
  "babel": {
    "presets": [
      "env"
    ],
    "plugins": [
      "transform-object-rest-spread"
    ]
  }
